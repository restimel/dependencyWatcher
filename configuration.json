{
    "configuration": [{

        "name": "Backend",

        "rootFolders": ["main.js", "modules/*"],
        "fileFilter": {
            "whitelist": [{
                "pattern": "\\.js$"
            }]
        },
        "fileNameAdapter": [{
            "matcher": {"pattern": ".*/modules/(.*)$"},
            "output": "./modules/$1"
        }, {
            "matcher": {"pattern": "^\\./(?:\\./)+"},
            "output": "./"
        }],
        "fileLabelAdapter": [{
            "matcher": {"pattern": ".*/([^/]+)$"},
            "output": "$1"
        }],
        "types": [{
            "name": "modules",
            "matcher": {
                "pattern": "/modules/"
            },
            "color": "#000066",
            "rights": {
                "readFile": true,
                "writeFile": "password"
            }
        }],
        "requireMatcher": [{
            "pattern": "require\\(['\"]((?:\\\\.|.)+?)['\"]\\)",
            "flags": "g"
        }],
        "requireNameAdapter": [{
            "matcher": {"pattern": "\\./(?!modules/)"},
            "output": "./modules/"
        }]
    }, {

        "name": "Frontend",

        "rootFolders": ["pages/*"],
        "fileFilter": {
            "whitelist": [{
                "pattern": "\\.js$"
            }, {
                "pattern": "\\.html$"
            }, {
                "pattern": "\\.css$"
            }],
            "blacklist": [{
                "pattern": "/libs/"
            }]
        },
        "fileNameAdapter": [{
            "matcher": {"pattern": ".*/modules/(.*)$"},
            "output": "./modules/$1"
        }, {
            "matcher": {"pattern": "^\\./(?:\\./)+"},
            "output": "./"
        }],
        "fileLabelAdapter": [{
            "matcher": {"pattern": ".*/([^/]+)$"},
            "output": "$1"
        }],
        "types": [{
            "name": "scripts",
            "matcher": {
                "pattern": "pages/(?:scripts|vues)/"
            },
            "color": "#001f1f",
            "bgColor": "#9fa2ce",
            "rights": {
                "readFile": "password",
                "writeFile": "password"
            }
        }, {
            "name": "html",
            "matcher": {
                "pattern": ".html"
            },
            "color": "#00c11f",
            "bgColor": "#dce0de",
            "rights": {
                "readFile": true,
                "writeFile": "password"
            }
        }, {
            "name": "css",
            "matcher": {
                "pattern": ".css"
            },
            "color": "#f01ff0",
            "bgColor": "#e8e0ce",
            "rights": {
                "readFile": true,
                "writeFile": "password"
            }
        }, {
            "name": "libs",
            "matcher": {
                "pattern": "/libs/"
            },
            "color": "#00333f",
            "bgColor": "#f9a2ae",
            "rights": {
                "readFile": "password",
                "writeFile": false
            }
        }],
        "requireMatcher": [{
            "pattern": "require\\(['\"]((?:\\\\.|.)+?)['\"]\\)",
            "flags": "g"
        }, {
            "pattern": "<script\\s[^>]*src=\"(.*?)\"></script>",
            "flags": "g"
        }, {
            "pattern": "<link\\s[^>]*href=\"(.*?)\">",
            "flags": "g"
        }],
        "requireNameAdapter": [{
            "matcher": {"pattern": "\\./(?!pages/)"},
            "output": "./pages/"
        }, {
            "matcher": {"pattern": "^(?!\\./|/)"},
            "output": "./pages/"
        }]
    }, {

        "name": "Configuration",

        "rootFolders": ["./*"],
        "fileFilter": {
            "whitelist": [{
                "pattern": "\\.json$"
            }]
        },
        "fileNameAdapter": [],
        "fileLabelAdapter": [{
            "matcher": {"pattern": ".*/(.*)$"},
            "output": "$1"
        }],
        "types": [{
            "name": "default",
            "matcher": {
                "pattern": ".*"
            },
            "color": "#001f1f",
            "bgColor": "#9fa2ce",
            "rights": {
                "readFile": "password",
                "writeFile": "password"
            }
        }],
        "requireMatcher": [],
        "requireNameAdapter": []
    }],
    "security": {
        "passwordFile": "password.txt",
        "key": "./security/key.pem",
        "cert": "./security/cert.pem"
    },
    "log": "test.log"
}